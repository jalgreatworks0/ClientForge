# Test Environment Configuration
# DO NOT use production credentials here!

NODE_ENV=test

# Database URLs (Test instances)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/clientforge_crm_test
TEST_REDIS_URL=redis://localhost:6380
TEST_MONGODB_URL=mongodb://localhost:27018/clientforge_test

# JWT Configuration (Test secrets)
JWT_SECRET=test-jwt-secret-change-in-production
JWT_REFRESH_SECRET=test-refresh-secret-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Hashing
BCRYPT_ROUNDS=4

# API Configuration
API_PORT=3002
API_VERSION=v1

# Rate Limiting (Disabled for tests)
DISABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=error
ENABLE_QUERY_LOGGING=false

# Email (Test mode)
EMAIL_PROVIDER=mock
DISABLE_EMAILS=true

# Feature Flags (Test environment)
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false

# Test-specific settings
TEST_TIMEOUT=30000
MAX_TEST_RETRIES=2
