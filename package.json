{
  "name": "clientforge-crm",
  "version": "3.0.0",
  "description": "Enterprise AI-Powered CRM Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend/apps/*",
    "backend",
    "ai/js-modules/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "ts-node-dev --respawn --transpile-only backend/index.ts",
    "build": "turbo run build",
    "build:backend": "tsc && tsc-alias",
    "start:backend": "node dist/backend/index.js",
    "test": "turbo run test",
    "test:backend": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "turbo run lint",
    "lint:backend": "eslint backend --ext .ts",
    "lint:fix": "eslint backend --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "db:migrate": "node scripts/migration/run-migrations.js",
    "db:rollback": "node scripts/migration/rollback.js",
    "db:seed": "node scripts/migration/seed-data.js",
    "docker:dev": "docker-compose -f deployment/docker/development/docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f deployment/docker/development/docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f deployment/docker/development/docker-compose.dev.yml down",
    "docker:build": "docker build -f deployment/docker/production/Dockerfile.prod -t clientforge:latest .",
    "deploy:dev": "./scripts/deploy/deploy-dev.sh",
    "deploy:staging": "./scripts/deploy/deploy-staging.sh",
    "deploy:production": "./scripts/deploy/deploy-production.sh",
    "ai:train": "cd ai && python training/train_all_models.py",
    "security:scan": "npm audit && snyk test",
    "docs:update": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1",
    "docs:session-end": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1 -Mode session-end",
    "docs:changelog": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1 -Mode changelog-only",
    "docs:check": "echo 'Documentation check - Review main docs in docs/ folder'",
    "docs:validate": "echo 'Documentation validation - Ensure all main docs are up-to-date'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "socket.io": "^4.6.0",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "mongodb": "^6.5.0",
    "zod": "^3.23.4",
    "rate-limiter-flexible": "^3.0.0",
    "@tensorflow/tfjs-node": "^4.15.0",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.5",
    "@types/jest": "^29.5.12",
    "typescript": "^5.3.0",
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "cypress": "^13.6.0",
    "@playwright/test": "^1.40.0",
    "nodemon": "^3.0.0",
    "webpack": "^5.89.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
