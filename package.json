{
  "name": "clientforge-crm",
  "version": "3.0.0",
  "description": "Enterprise AI-Powered CRM Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend/apps/*",
    "backend",
    "ai/js-modules/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "ts-node-dev --respawn --transpile-only backend/index.ts",
    "build": "turbo run build",
    "build:backend": "tsc -p backend/tsconfig.json || true",
    "start:backend": "node dist/backend/index.js",
    "test": "turbo run test",
    "test:backend": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:rls": "jest tests/security/rls-tests.spec.ts",
    "test:performance": "k6 run tests/performance/k6-load-test.js",
    "test:performance:smoke": "k6 run --vus 1 --duration 30s tests/performance/k6-load-test.js",
    "verify:services": "tsx scripts/verification/verify-services.ts",
    "lint": "turbo run lint",
    "lint:backend": "eslint backend --ext .ts",
    "lint:fix": "eslint backend --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\"",
    "db:migrate": "node scripts/migration/run-migrations.js",
    "db:rollback": "node scripts/migration/rollback.js",
    "db:seed": "node scripts/migration/seed-data.js",
    "seed:admin": "tsx scripts/seed/seed-admin.ts",
    "docker:dev": "docker-compose -f deployment/docker/development/docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f deployment/docker/development/docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f deployment/docker/development/docker-compose.dev.yml down",
    "docker:build": "docker build -f deployment/docker/production/Dockerfile.prod -t clientforge:latest .",
    "deploy:dev": "./scripts/deploy/deploy-dev.sh",
    "deploy:staging": "./scripts/deploy/deploy-staging.sh",
    "deploy:production": "./scripts/deploy/deploy-production.sh",
    "ai:train": "cd ai && python training/train_all_models.py",
    "security:scan": "npm audit && snyk test",
    "docs:update": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1",
    "docs:session-end": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1 -Mode session-end",
    "docs:changelog": "powershell -ExecutionPolicy Bypass -File ./scripts/documentation/update-main-docs.ps1 -Mode changelog-only",
    "docs:check": "echo 'Documentation check - Review main docs in docs/ folder'",
    "docs:validate": "echo 'Documentation validation - Ensure all main docs are up-to-date'",
    "agents:run": "tsx scripts/agents/orchestrator.ts",
    "agents:plan": "tsx scripts/agents/orchestrator.ts --mode=plan",
    "agents:review": "tsx scripts/agents/orchestrator.ts --mode=review",
    "mcp:start": "tsx agents/mcp/scripts/start-mcp-server.ts",
    "mcp:clients": "tsx agents/mcp/scripts/start-ollama-clients.ts",
    "mcp:all": "powershell -ExecutionPolicy Bypass -File agents/scripts/start-all.ps1",
    "mcp:stop": "powershell -Command \"Get-Process | Where-Object {$_.CommandLine -like '*mcp*'} | Stop-Process -Force\"",
    "fleet:start": "powershell -ExecutionPolicy Bypass -File agents/scripts/start-fleet.ps1",
    "fleet:stop": "powershell -Command \"Get-Process | Where-Object {$_.CommandLine -like '*ollama serve*'} | Stop-Process -Force\"",
    "fleet:status": "curl http://localhost:11434/api/tags && curl http://localhost:11435/api/tags && curl http://localhost:11436/api/tags && curl http://localhost:11437/api/tags",
    "queue:health": "tsx scripts/queue/check-queue-health.ts",
    "queue:clear-dlq": "tsx scripts/queue/clear-dlq.ts",
    "queue:inject-failure": "tsx scripts/queue/inject-failing-job.ts",
    "queue:autoscale": "tsx scripts/queue/queue-autoscaler.ts",
    "db:check-extensions": "tsx scripts/database/check-pg-extensions.ts",
    "db:setup-slow-query": "tsx scripts/database/setup-slow-query-monitoring.ts",
    "db:analyze-slow": "tsx scripts/database/analyze-slow-queries.ts",
    "db:add-indexes": "tsx scripts/database/add-performance-indexes.ts",
    "backup:postgres": "tsx scripts/backup/postgres-backup.ts",
    "backup:mongodb": "tsx scripts/backup/mongodb-backup.ts",
    "backup:all": "npm run backup:postgres && npm run backup:mongodb",
    "restore:postgres": "tsx scripts/backup/postgres-restore.ts",
    "db:backup": "tsx scripts/database/backup-database.ts",
    "db:restore": "tsx scripts/database/restore-database.ts",
    "db:test-backup": "tsx scripts/database/test-backup-restore.ts",
    "cache:test": "tsx scripts/cache/test-cache-performance.ts",
    "es:check-status": "tsx scripts/elasticsearch/check-es-status.ts",
    "es:setup-ilm": "tsx scripts/elasticsearch/setup-ilm.ts",
    "es:create-tenant-aliases": "tsx scripts/elasticsearch/create-tenant-aliases.ts",
    "es:test-tenant-isolation": "tsx scripts/elasticsearch/canary-test.ts",
    "search:analyze": "tsx scripts/search/analyze-search-queries.ts",
    "storage:test-security": "tsx scripts/storage/test-file-security.ts",
    "deploy:verify": "tsx scripts/deployment/verify-deployment.ts",
    "errors:lint": "tsx scripts/errors/lint-registry.ts",
    "errors:gen": "tsx scripts/errors/generate-types.ts",
    "errors:grep": "tsx scripts/errors/grep-uncatalogued-errors.ts",
    "errors:check": "npm run errors:lint && npm run errors:gen && npm run errors:grep",
    "errors:digest": "tsx scripts/errors/send-daily-digest.ts",
    "chaos:db": "tsx scripts/chaos/simulate-db-outage.ts",
    "chaos:elasticsearch": "tsx scripts/chaos/simulate-elasticsearch-down.ts",
    "agent:override-check": "tsx scripts/agents/enforce-override.ts",
    "agent:log-edit": "powershell -ExecutionPolicy Bypass -File scripts/agents/agent-log-edit.ps1",
    "agent:open-workspace": "powershell -ExecutionPolicy Bypass -File scripts/agents/open-workspace-all-drives.ps1",
    "monitor:start": "docker compose up -d prometheus grafana loki promtail",
    "monitor:status": "docker compose ps",
    "monitor:logs": "docker compose logs -f --tail=200 prometheus grafana loki promtail"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@aws-sdk/client-s3": "^3.928.0",
    "@aws-sdk/s3-request-presigner": "^3.928.0",
    "@azure/msal-node": "^3.8.1",
    "@elastic/elasticsearch": "^8.19.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@okta/okta-auth-js": "^7.14.0",
    "@sendgrid/mail": "^8.1.6",
    "@tensorflow/tfjs-node": "^4.15.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.0",
    "bullmq": "^5.63.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.6.0",
    "googleapis": "^165.0.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.31.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.5.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "openai": "^4.20.0",
    "papaparse": "^5.5.3",
    "pg": "^8.11.0",
    "pgvector": "^0.1.8",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.29.1",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^3.0.6",
    "redis": "^4.6.0",
    "saml2-js": "^4.0.4",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^14.25.0",
    "taxjar": "^4.1.0",
    "twilio": "^5.10.4",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-mongodb": "^7.0.1",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.3",
    "@types/papaparse": "^5.5.0",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
