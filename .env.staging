# Application
NODE_ENV=development
APP_NAME=ClientForge CRM
APP_URL=http://localhost:3000
APP_PORT=3000
PORT=3000

# Security (REQUIRED - Change in production!)
JWT_SECRET=change_me_dev_jwt_secret_min_32_chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=change_me_dev_session_secret_min_32_chars
ENCRYPTION_KEY=change_me_dev_encryption_key_min_32_chars

# CORS (Frontend URL)
CORS_ORIGIN=http://localhost:3001

# Database - PostgreSQL
DATABASE_URL=postgresql://crm:password@localhost:5432/clientforge
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Database - MongoDB
MONGODB_URI=mongodb://crm:password@localhost:27017/clientforge

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=clientforge

# RabbitMQ
RABBITMQ_URL=amqp://crm:password@localhost:5672

# File Storage (MinIO/S3)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
STORAGE_BUCKET=clientforge-files

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@clientforge.com

# AI Services
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
HUGGINGFACE_API_KEY=your-huggingface-key
AI_MODEL_PATH=/models
AI_SERVICE_URL=http://localhost:5000
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
DATADOG_API_KEY=your-datadog-key

# WebSocket
FRONTEND_URL=http://localhost:5173
WEBSOCKET_PORT=3000

# Job Queue
BULL_BOARD_ENABLED=true
BULL_BOARD_PATH=/admin/queues

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_VOICE_COMMANDS=false
ENABLE_WEBSOCKET=true
ENABLE_JOB_QUEUE=true

# Rate Limiting (per user per minute)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_PER_MIN=20
RATE_LIMIT_SEARCH_PER_MIN=120
RATE_LIMIT_UPLOAD_PER_MIN=30
RATE_LIMIT_API_PER_MIN=300

# External Integrations
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-secret

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
