{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node10",
    "allowJs": true,
    "strict": false,
    "noEmitOnError": false,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0"
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "frontend",
    "backend",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
