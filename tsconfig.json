{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "ignoreDeprecations": "5.9",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/*"],
      "@config/*": ["config/*"],
      "@agents/*": ["agents/*"],
      "@database/*": ["database/*"],
      "@scripts/*": ["scripts/*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,

    // Gradual strict mode adoption - enable incrementally
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": [
    "backend/**/*",
    "config/**/*",
    "agents/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test-ai-import.js",
    "backend/services/ai/experimental/**/*",
    "backend/api/routes/email-tracking-routes.ts",
    "backend/middleware/auth/jwt-validator.ts"
  ]
}
