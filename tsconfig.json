{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/*"],
      "@config/*": ["config/*"],
      "@agents/*": ["agents/*"],
      "@database/*": ["database/*"],
      "@scripts/*": ["scripts/*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,

    // Gradual strict mode adoption - enable incrementally
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false
  },
  "include": [
    "backend/**/*",
    "config/**/*",
    "agents/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test-ai-import.js",
    "backend/services/ai/experimental/**/*"
  ]
}
