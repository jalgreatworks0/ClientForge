{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/backend",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["../config/*"],
      "@core/*": ["core/*"],
      "@database/*": ["database/*"],
      "@middleware/*": ["middleware/*"],
      "@modules/*": ["modules/*"],
      "@queues/*": ["queues/*"],
      "@scripts/*": ["scripts/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test-ai-import.js"
  ]
}
