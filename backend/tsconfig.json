{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "paths": {
      "@backend/*": ["./*"]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test-ai-import.js"
  ]
}
