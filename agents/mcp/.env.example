# ============================================================================
# MCP Server Environment Variables - Example Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!
# ============================================================================

# AI Router API Keys (for hybrid local+API intelligence)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# LM Studio Integration
LM_STUDIO_URL=http://localhost:1234

# RAG Server (optional - for vector search)
RAG_ENDPOINT=http://127.0.0.1:8920

# Orchestrator (optional - for multi-agent coordination)
ORCHESTRATOR_PORT=8979

# Database Connections (already configured in Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=clientforge_crm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

MONGODB_URI=mongodb://localhost:27017/clientforge_crm

REDIS_HOST=localhost
REDIS_PORT=6379

ELASTICSEARCH_URL=http://localhost:9200

# Security Settings
ENABLE_ENCRYPTION=true
VAULT_PROVIDER=local
LOG_LEVEL=info

# Workspace Configuration
WORKSPACE_ROOT=D:\clientforge-crm
