{
  "planner": {
    "mode": "local",
    "local": {
      "command": "tsx agents/adapters/planner_local.ts"
    },
    "claude_sdk": {
      "model": "claude-3-5-sonnet-20241022",
      "notes": "Uses CLAUDE_API_KEY from env"
    },
    "http": {
      "endpoint": "http://localhost:3001/api/plan"
    }
  },
  "reviewer": {
    "mode": "local",
    "local": {
      "command": "tsx agents/adapters/reviewer_local.ts"
    },
    "gpt_sdk": {
      "model": "gpt-4-turbo",
      "notes": "Uses GPT_API_KEY from env"
    },
    "http": {
      "endpoint": "http://localhost:3002/api/review"
    }
  },
  "limits": {
    "rate_per_min": 20,
    "retry_max": 4,
    "retry_base_ms": 300,
    "retry_max_ms": 5000,
    "circuit_breaker_threshold": 3,
    "circuit_cooldown_ms": 60000,
    "latency_slo_ms": 4000,
    "notes": "Retry uses exponential backoff with jitter. Circuit breaker opens after 3 failures for 60s."
  }
}
