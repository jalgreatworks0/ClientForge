# Elaria Command Center - Environment Configuration
# Copy this file to .env and adjust values as needed

# LM Studio Configuration
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODEL=qwen2.5-30b-a3b
LM_STUDIO_TIMEOUT=300000

# ClientForge Paths (D: drive)
CLIENTFORGE_ROOT=D:\ClientForge
CLIENTFORGE_CODE=D:\ClientForge\02_CODE
CLIENTFORGE_STAGING=D:\ClientForge\_staging
CLIENTFORGE_BACKUPS=D:\ClientForge\06_BACKUPS
CLIENTFORGE_SHARED_AI=D:\ClientForge\05_SHARED_AI

# Priority Context Files (read in order)
PRIORITY_README=D:\ClientForge\README.md
CONTEXT_PACK_DIR=D:\ClientForge\05_SHARED_AI\context_pack
CHANGELOG_PATH=D:\ClientForge\docs\07_CHANGELOG.md
MAP_PATH=D:\ClientForge\docs\00_MAP.md

# Orchestrator Configuration
ORCHESTRATOR_URL=http://127.0.0.1:8979
ORCHESTRATOR_ENABLED=true
ORCHESTRATOR_TIMEOUT=30000

# RAG Service Configuration
RAG_URL=http://127.0.0.1:8920
RAG_ENABLED=true
RAG_TOP_K=12

# MCP Servers
MCP_FILESYSTEM_ROOT=D:\ClientForge
MCP_PROCESS_ALLOWED_EXTENSIONS=.ps1,.sh,.py
MCP_HTTP_ALLOWED_HOSTS=127.0.0.1,localhost,render.com,notion.so,discord.com

# Elaria Behavior
ELARIA_REASONING_EFFORT=medium
ELARIA_AUTO_BACKUP=true
ELARIA_SAFE_WRITE=true
ELARIA_MAX_RUNTIME=900
ELARIA_VERBOSE=true

# Safety Settings
REQUIRE_STAGING=true
REQUIRE_TESTS=true
REQUIRE_BACKUP=true
NEVER_SKIP_VALIDATION=true

# Performance Gates
PERF_API_P50_MS=200
PERF_FCP_S=1.5
PERF_BUNDLE_KB=200

# Coverage Requirements
COVERAGE_GENERAL=85
COVERAGE_AUTH=95
COVERAGE_PAYMENT=95

# Logging
LOG_LEVEL=info
LOG_DIR=D:\ClientForge\05_SHARED_AI\build_logs
SESSION_LOG_ENABLED=true
